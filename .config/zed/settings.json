// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "tab_bar": {
    "show": true,
  },
  "tabs": {
    "show_diagnostics": "all",
    "file_icons": true,
    "git_status": true,
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 1500,
    },
  },
  "wrap_guides": [90],
  //"show_wrap_guides": true,
  //"completion_menu_scrollbar": "auto",
  "rounded_selection": true,
  "minimap": {
    "show": "never",
  },
  "search": {
    "button": false,
    //  "case_sensitive": true,
    "center_on_match": true,
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",

    // Dark translucent background overrides
    "background": "#0a0a0ad0",
    "status_bar.background": "#0a0a0ad0",
    "title_bar.background": "#0a0a0ad0",
    "elevated_surface.background": "#0a0a0ad0",
    "surface.background": "#0a0a0ad0",
    "editor.background": "#00000000",
    "editor.gutter.background": "#00000000",
    "editor.active_line.background": "#ffffff12",
    "editor.indent_guide": "#3a3a3a1a",
    "editor.indent_guide_active": "#5a5a5a33",

    "border": "#2a2a2a40",
    "border.variant": "#2a2a2a20",
    "hint.background": "#1a1a1acc",

    "tab_bar.background": "#00000000",
    "tab.active_background": "#ffffff12",
    "tab.inactive_background": "#00000000",
    "element.selected": "#2a2a2a30",

    "panel.background": "#00000000",
    "panel.indent_guide": "#3a3a3a12",
    "panel.indent_guide_hover": "#3a3a3a16",
    "panel.indent_guide_active": "#3a3a3a1a",
    "panel.focused_border": "#00000000",

    "toolbar.background": "#00000000",
    "terminal.background": "#00000000",
    "scrollbar.track.background": "#00000000",
    "scrollbar.track.border": "#00000000",
    "scrollbar.thumb.background": "#3a3a3a30",

    "ghost_element.background": "#1a1a1a08",
    "ghost_element.hover": "#2a2a2a12",
    "ghost_element.active": "#2a2a2a18",
    "ghost_element.selected": "#2a2a2a25",
    "drop_target.background": "#2a2a2a25",
    "element.hover": "#2a2a2a15",
    "editor.highlighted_line.background": "#2a2a2a20",
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1500,
    },
  },
  "toolbar": {
    "quick_actions": false,
  },
  "scrollbar": {
    "axes": {
      "vertical": false,
      "horizontal": true,
    },
    "show": "auto",
  },
  "relative_line_numbers": "enabled",
  "cursor_blink": false,
  "vim_mode": true,
  "ui_font_size": 16,
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
  },
  "ui_font_family": "JetBrains Mono",
  "colorize_brackets": true,
  "hide_mouse": "on_typing_and_movement",
  "telemetry": {
    "metrics": false,
    "diagnostics": false,
  },
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Zedokai Darker (Filter Spectrum)",
  },
  "lsp": {
    "omnisharp": {
      "binary": {
        "path": "csharp-language-server",
      },
    },
  },
}
